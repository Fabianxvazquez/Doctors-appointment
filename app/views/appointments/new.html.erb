<h1>Appointments#new</h1>
<p>Find me in app/views/appointments/new.html.erb</p>
<h1>Add an Appointment</h1>

<%= form_with(model:[@doctor, @appointment], local: true, class: "ui form") do |f|%>
  <%= f.label :date %>
  <%= f.label :date %>
  <%= f.date_field :date, min: Date.today%>
  <%= f.label :users %>
  <%= f.select :users_id, User.all.collect { |u| [u.full_name, u.id]} %>
  <%# this isn't working with the 'p' variable - but is with the 'u' variable %>
  <%= f.submit nil, class: "ui green button inverted" %>
<% end %>